{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "airbnb-base",
  "rules": {
    "linebreak-style": 0,
    "max-len": 0,
    "no-param-reassign": ["error", {
      "props": false
    }],
    "comma-dangle": ["error", "always-multiline", {
      "functions": "never"
    }]
  }
}
